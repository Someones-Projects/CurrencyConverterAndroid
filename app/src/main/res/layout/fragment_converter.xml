<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ConverterFragment">


    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/purple_500"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fromCurrencyTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="US Dollar"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/fromCurrencyAmountTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:focusable="true"
        app:drawableTint="@color/white"
        app:drawableEndCompat="@drawable/ic_arrow_drop_down"
        android:drawablePadding="4dp"/>


    <TextView
        android:id="@+id/fromCurrencyAmountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        tools:text="100"
        android:textColor="@color/white"
        android:textSize="56sp"
        app:autoSizeMaxTextSize="56sp"
        app:autoSizeMinTextSize="24sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@id/fromCurrencyCodeTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fromCurrencyTitleTv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fromCurrencySymbolTv"
        tools:text="$"
        app:layout_constraintStart_toEndOf="@id/fromCurrencyAmountTv"
        app:layout_constraintBaseline_toBaselineOf="@id/fromCurrencyAmountTv"
        android:textColor="@color/transparentWhite"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/fromCurrencyCodeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        tools:text="USD"
        android:textColor="@color/transparentWhite"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/ivBtnConvert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivBtnConvert"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_convert"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/toCurrencyCodeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="INR"
        android:textColor="@color/transparentPurple"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBtnConvert" />

    <TextView
        android:id="@+id/toCurrencyAmountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:maxLines="1"
        android:textColor="@color/purple_500"
        android:textSize="56sp"
        app:autoSizeMaxTextSize="56sp"
        app:autoSizeMinTextSize="24sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@id/toCurrencyTitleTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toCurrencyCodeTv"
        tools:text="100" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toCurrencySymbolTv"
        tools:text="$"
        app:layout_constraintStart_toEndOf="@id/toCurrencyAmountTv"
        app:layout_constraintBaseline_toBaselineOf="@id/toCurrencyAmountTv"
        android:textColor="@color/transparentPurple"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/toCurrencyTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Indian Rupees"
        android:textColor="@color/purple_500"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toCurrencyAmountTv"
        app:drawableTint="@color/purple_500"
        app:drawableEndCompat="@drawable/ic_arrow_drop_down"
        android:drawablePadding="4dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:indeterminateTint="@color/green_500"
        android:visibility="gone"
        tools:visibility="visible"/>


</androidx.constraintlayout.widget.ConstraintLayout>